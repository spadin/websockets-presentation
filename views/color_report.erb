<!DOCTYPE html>
<html>
<head>
  <meta http-equiv="content-type" content="text/html; charset=utf-8" />
  <style type="text/css">
    body {
      font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
      margin: auto;
      position: relative;
      width: 400px;
    }

    text {
      font: 10px sans-serif;
    }

    form {
      position: absolute;
      right: 10px;
      top: 10px;
    }
    #graph {
      margin: 0 auto;
      width: 400px; height: 300px;
      clear: both;
    }
    h1 {
      text-align: center;
      font-weight: normal;
    }
    #list {
      clear: both;
      width: 300px;
      margin: 0 auto;
      border: 1px solid #ccc;
    }
  </style>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.0/jquery.min.js"></script>
  <script src="http://js.pusher.com/2.0/pusher.min.js" type="text/javascript"></script>
  <script src="lib/d3.v3.min.js"></script>
  <script type="text/javascript" charset="utf-8">
    $(function() {
      var data = [1, 1, 1, 1, 1, 1];

      var colorsArr = ["red", "green", "blue", "pink", "purple", "orange"]
      var colors = function(i) {
        return colorsArr[i];
      };
      var colorIndex = function(color) {
        return colorsArr.indexOf(color);
      };

      var width = 400,
          height = 300,
          radius = Math.min(width, height) / 2;

      var color = d3.scale.category20();

      var pie = d3.layout.pie()
          .sort(null);

      var arc = d3.svg.arc()
          .innerRadius(radius - 100)
          .outerRadius(radius - 20);

      var svg = d3.select("#graph").append("svg")
          .attr("width", width)
          .attr("height", height)
          .append("g")
          .attr("transform", "translate(" + width / 2 + "," + height / 2 + ")");

      var path = svg.selectAll("path")
          .data(pie(data))
          .enter().append("path")
          .attr("fill", function(d, i) {
            return colors(i);
          })
          .attr("d", arc)
          .each(function(d) { this._current = d; }); // store the initial values

      var arcTween = function(a) {
        var i = d3.interpolate(this._current, a);
        this._current = i(0);
        return function(t) {
          return arc(i(t));
        };
      }

      var change = function() {
        path = path.data(pie(data)); // update the data
        path.transition().duration(750).attrTween("d", arcTween); // redraw the arcs
      }

      var updateTable = function() {
        for(var i = 0; i < data.length; i++) {
          var selector = "td." + colors(i);
          $(selector).text(data[i]);
        }
      };

      var pusher = new Pusher('898d03e2953cbf6d85c1');
      var channel = pusher.subscribe('color');
      channel.bind('choose', function(d) {
          var idx = colorIndex(d.color);
          data[idx] = data[idx] + 1;
          change();
          updateTable();
      });

    });
    // Enable pusher logging - don't include this in production
    /*
    Pusher.log = function(message) {
      if (window.console && window.console.log) window.console.log(message);
    };
    */

  </script>
  <title></title>
</head>
<body>
  <h1>What's your favorite color?</h1>
  <div id="graph"></div>
  <table id="list">
    <tbody>
      <tr>
        <td>Red</td>
        <td class="red">1</td>
      </tr>
      <tr>
        <td>Green</td>
        <td class="green">1</td>
      </tr>
      <tr>
        <td>Blue</td>
        <td class="blue">1</td>
      </tr>
      <tr/>
      <tr>
        <td>Pink</td>
        <td class="pink">1</td>
      </tr>
      <tr>
        <td>Purple</td>
        <td class="purple">1</td>
      </tr>
      <tr>
        <td>Orange</td>
        <td class="orange">1</td>
      </tr>
    </tbody>
  </table>
</body>
</html>
